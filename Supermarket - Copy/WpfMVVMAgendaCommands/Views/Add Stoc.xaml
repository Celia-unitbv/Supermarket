<Window x:Class="WpfMVVMAgendaCommands.Views.AddStocWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Stoc" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Produs"/>
            <ComboBox x:Name="productComboBox" DisplayMemberPath="NumeProdus" SelectedValuePath="CodBare"/>

            <Label Content="Cantitate"/>
            <TextBox x:Name="cantitateTextBox"/>

            <Label Content="Preț Achiziție"/>
            <TextBox x:Name="pretAchizitieTextBox"/>

            <Button Content="Adaugă" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
